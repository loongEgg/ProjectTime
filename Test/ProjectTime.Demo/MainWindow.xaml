<Window
    x:Class="ProjectTime.Demo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectTime.Demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Style="{StaticResource WindowStyle.Base}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Border
            Height="30"
            VerticalAlignment="Top"
            Background="#FF1F7BBB"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">

            <StackPanel
                HorizontalAlignment="Right"
                ButtonBase.Click="StackPanel_Click"
                Orientation="Horizontal">
                <Button Width="60" Content="Minimize" />
                <Button Width="60" Content="Maximize" />
                <Button Width="60" Content="Close" />
            </StackPanel>

        </Border>

        <Grid>
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="52"
                Foreground="#FF1F7BBB">
                美化按钮和边框放在下一期
            </TextBlock>
        </Grid>
    </Grid>
</Window>
